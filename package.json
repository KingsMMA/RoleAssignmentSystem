{
  "name": "role-assignment-system",
  "version": "1.0",
  "description": "A discord.js bot to handle role assignment in servers",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "build": "npm run clean && tsc -p tsconfig.json",
    "clean": "del /F /Q dist",
    "watch": "tsc -p tsconfig.json -w",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --fix --ext .ts ./src",
    "format": "prettier --check --ignore-path .gitignore ./src",
    "format:fix": "prettier --write --ignore-path .gitignore ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KingsMMA/RoleAssignmentSystem.git"
  },
  "author": "KingsMMA",
  "bugs": {
    "url": "https://github.com/KingsMMA/RoleAssignmentSystem/issues"
  },
  "homepage": "https://github.com/KingsMMA/RoleAssignmentSystem",
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/express": "^4.17.16",
    "@types/klaw": "^3.0.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.3.1",
    "discord.js": "^14.14.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "klaw": "^4.1.0",
    "mongodb": "^5.0.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2"
  }
}
